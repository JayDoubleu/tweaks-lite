<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>dev.jaydoubleu.tweaks.lite</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>
  <name>Tweaks Lite</name>
  <summary>A lightweight system configuration tool for GNOME</summary>
  
  <description>
    <p>Tweaks Lite is a lightweight system configuration tool for GNOME, allowing you to customize various aspects of your desktop environment.</p>
    <p>Features:</p>
    <ul>
      <li>Modern GTK4 and libadwaita interface</li>
      <li>Appearance and theme customization</li>
      <li>Font settings management</li>
      <li>Window behavior configuration</li>
      <li>GNOME Shell extensions management</li>
      <li>Startup applications control</li>
    </ul>
    <p>Credits and Acknowledgments:</p>
    <ul>
      <li>Based on GNOME Tweaks by the GNOME Project team (GPL-3.0)</li>
      <li>Development assisted by Claude 3.5 Sonnet model from Anthropic</li>
      <li>Developed using Cursor IDE</li>
    </ul>
  </description>

  <developer_name>Jay W</developer_name>
  <update_contact>git.jaydoubleu@gmail.com</update_contact>
  
  <provides>
    <binary>tweaks-lite</binary>
  </provides>

  <kudos>
    <kudo>ModernToolkit</kudo>
    <kudo>HiDpiIcon</kudo>
  </kudos>

  <url type="homepage">https://github.com/JayDoubleu/tweaks-lite</url>
  <url type="bugtracker">https://github.com/JayDoubleu/tweaks-lite/issues</url>
  <url type="vcs-browser">https://github.com/JayDoubleu/tweaks-lite</url>
  <url type="source">https://github.com/JayDoubleu/tweaks-lite</url>
